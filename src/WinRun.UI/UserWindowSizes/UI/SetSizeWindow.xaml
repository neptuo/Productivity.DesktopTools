<Window x:Class="WinRun.UserWindowSizes.UI.SetSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Size" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="10, 0, 10, 10" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0,2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4,2" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="4,2" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <CheckBox Content="Related to the current monitor" IsChecked="{Binding IsCurrentMonitor}" Margin="10" Grid.Row="1" Grid.ColumnSpan="2" />

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label Content="Left" />
            <TextBox Text="{Binding Left}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Label Content="Top" />
            <TextBox Text="{Binding Top}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Label Content="Width" />
            <TextBox Text="{Binding Width}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Label Content="Height" />
            <TextBox Text="{Binding Height}" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="1">
            <Button Content="Set position and size" Command="{Binding Apply}" />
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="0">
            <Label Content="Name" />
            <TextBox Text="{Binding Name}" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Row="5" Grid.Column="1">
            <Button Content="Save as" Command="{Binding SaveAs}" />
        </StackPanel>
    </Grid>
</Window>
