<Window x:Class="WinRun.UserWindowSizes.UI.SetSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetSizeWindow" Height="300" Width="300" SizeToContent="Height" Topmost="True" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="10, 0, 10, 10" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,4" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="{Binding Title}" Padding="10" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" />
        <CheckBox Content="Related to the current monitor" IsChecked="{Binding IsCurrentMonitor}" Margin="10" Grid.Row="1" Grid.ColumnSpan="2" />

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label Content="Left" />
            <TextBox x:Name="tbxLeft" Text="{Binding Left, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Label Content="Top" />
            <TextBox Text="{Binding Top, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Label Content="Width" />
            <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Label Content="Height" />
            <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Button Content="Set position and size" Command="{Binding ApplyCommand}" IsDefault="True" HorizontalAlignment="Stretch" Margin="8" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" />
    </Grid>
</Window>
