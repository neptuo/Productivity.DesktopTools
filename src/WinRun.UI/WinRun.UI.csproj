<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <!-- <ImplicitUsings>enable</ImplicitUsings> -->
    <!-- <Nullable>enable</Nullable> -->
  </PropertyGroup>
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>WinRun</RootNamespace>
    <ApplicationIcon>TrayIcon.ico</ApplicationIcon>
    <VersionPrefix>$(ApplicationVersion)</VersionPrefix>
    <Authors>maraf</Authors>
    <Company>Neptuo</Company>
    <Product>WinRun</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FontAwesome.WPF" Version="4.7.0.9" />
    <PackageReference Include="Neptuo" Version="6.0.2" />
    <PackageReference Include="Neptuo.Observables" Version="2.1.1" />
    <PackageReference Include="Neptuo.Windows.HotKeys" Version="2.0.0" />
    <PackageReference Include="Neptuo.Windows.Threading" Version="1.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Using Remove="System.Windows.Forms" />
  </ItemGroup>

</Project>
